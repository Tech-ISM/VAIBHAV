<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prajwal.vaibhav.events">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeevent"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/linearLayout"
    android:onClick="workshop"

    >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="12dp"
        android:layout_centerVertical="true"
        android:src="@drawable/workicon" />

    <TextView
        android:id="@+id/tab1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="WORKSHOP"
        android:textStyle="bold"
        android:textSize="20sp"
        android:shadowColor="#E57373"
        />

</LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"

        android:id="@+id/linearLayout3"
        >
        <ImageView
            android:id="@+id/image2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:src="@drawable/tech" />


        <TextView
        android:id="@+id/tab2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TECHNICAL"
        android:textStyle="bold"
        android:textSize="20sp"
        android:shadowColor="#E57373" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout21"
        >
        <ImageView
            android:id="@+id/image21"
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:padding="12dp"
            android:src="@drawable/trade"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />
        <TextView
            android:id="@+id/tab21"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:shadowColor="#E57373"
            android:text=" ONLINE TRADING"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout22"
        android:onClick="codeathon">

        <ImageView
            android:id="@+id/image22"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:src="@drawable/code" />


        <TextView
            android:id="@+id/tab22"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CODING EVENT"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#E57373" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/linearLayout22"
        android:id="@+id/linearLayout31"
        >
        <ImageView
            android:id="@+id/image31"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/paper"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />
        <TextView
            android:id="@+id/tab31"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:shadowColor="#E57373"
            android:text="PAPER PRESENTATION"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/linearLayout22"
        android:id="@+id/linearLayout32"
        android:onClick="placementfever">
        <ImageView
            android:id="@+id/image32"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:src="@drawable/placement" />


        <TextView
            android:id="@+id/tab32"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PLACEMENT FEVER"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#E57373" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/linearLayout31"
        android:id="@+id/linearLayout41"

        >
        <ImageView
            android:id="@+id/image41"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:padding="12dp"
            android:src="@drawable/trade"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignEnd="@+id/linearLayout2" />
        <TextView
            android:id="@+id/tab41"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:shadowColor="#E57373"
            android:text=" ONLINE TRADING"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        app:cardCornerRadius="3dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/linearLayout31"
        android:id="@+id/linearLayout42"
        android:onClick="gaming">
        <ImageView
            android:id="@+id/image42"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/linearLayout2"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:src="@drawable/game" />


        <TextView
            android:id="@+id/tab42"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="GAMING"
            android:textStyle="bold"
            android:textSize="20sp"
            android:shadowColor="#E57373" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
   </LinearLayout>

</LinearLayout>

</ScrollView>
